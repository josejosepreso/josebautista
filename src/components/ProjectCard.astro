---
import { Image } from "astro:assets";
import type { ProjectCardProps } from "../interfaces/Interface";

const { name, description, img_path, repository, slug } = Astro.props as ProjectCardProps;

---
<a class="home-project flex-col bg-gray-200 mr-4 mb-4" href={`/projects/${ slug }`}>
    <Image
        class="rounded-lg"
        src={ `/images/${img_path}` }
        alt=""
        width={-1}
        height={-1}
	style={{ width: "100%", maxHeight: "40vh" }}
    />
    <div class="mt-1 p-6 bg-gray-300 justify-items-center align-bottom text-blue-800 rounded-lg">
        <h3 class="font-extrabold mb-4 text-4xl">{ name }</h3>
        <p class="font-semibold">{ description.length > 100 ? description.substring(0, 100) + "..." : description }</p>
    </div>
</a>

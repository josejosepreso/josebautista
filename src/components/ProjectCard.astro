---
import { Image } from "astro:assets";
interface Props {
    name: string;
    description: string;
    img_path: string;
    repository: string;
}

const { name, description, img_path, repository } = Astro.props as Props;

---
<a class="home-project flex-col bg-gray-900 mr-4 mb-4" href={`${ repository }`}>
    <Image
        src={ `/images/${img_path}` }
        alt=""
        width={-1}
        height={-1}
    />
    <div class="p-6 bg-gray-700 justify-items-center align-bottom">
        <h3 class="font-extrabold text-white mb-4 text-4xl">{ name }</h3>
        <p class="text-white font-bold">{ description }</p>
    </div>
</a>